generator client {
  provider = "prisma-client"
  output   = "../app/_generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model TwitchUser {
  id           String   @id // Twitch user ID
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  scope        String
  isValid      Boolean  @default(true)

  // User info from Twitch
  login        String
  displayName  String
  profileImage String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Session   Session[]

  @@map("twitch_tokens")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user TwitchUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}
